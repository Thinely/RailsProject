<%= render 'admins/index' %>

<p id="notice"><%= notice %></p>

<div class="card">
<div class="card-body">
  <h1>Payment Details</h1>
</div>
</div>

<table class="table table-striped">
  <thead>
  <tr>
  <th scope="col">Amount</th>
  <th scope="col">Payment date</th>
  <th scope="col">Payment mode</th>
  <th scope="col">Payment month</th>
  <th scope="col"></th>
</tr>
  </thead>

  <tbody>
  <% if @payment_details.empty? %>
   <tr>
   <td colspan="8">No Details Found</td>
   </tr>
  <% end %>
  <% @payment_details.each do |payment_detail| %>
    <tr>
      <td><%= payment_detail.amount %></td>
      <td><%= payment_detail.payment_date %></td>
      <td><%= payment_detail.payment_mode %></td>
      <td><%= payment_detail.payment_month %></td>
      <td><%= link_to 'Show', payment_detail %></td>
      <td><%= link_to 'Edit', edit_payment_detail_path(payment_detail) %></td>
      <td><%= link_to 'Destroy', payment_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if !current_user.admin? %>
<%= link_to 'Make a Payment', new_payment_detail_path, class:"btn btn-primary" %>
<% end %>
<%= render 'admins/index_footer' %>
