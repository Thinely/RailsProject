<%= render 'admins/index' %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Tenant:</strong>
  <%= @payment_detail.tenant_id %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @payment_detail.amount %>
</p>

<p>
  <strong>Payment date:</strong>
  <%= @payment_detail.payment_date %>
</p>

<p>
  <strong>Payment mode:</strong>
  <%= @payment_detail.payment_mode %>
</p>

<p>
  <strong>Payment month:</strong>
  <%= @payment_detail.payment_month %>
</p>

<p>
  <strong>Image:</strong>
  <% if @payment_detail.image.attached? %>
    <p>
      <%= image_tag @payment_detail.image.variant(resize: "1000x1000") %>
    </p>
  <% end %>
</p>

<%= link_to 'Edit', edit_payment_detail_path(@payment_detail) %> |
<%= link_to 'Back', payment_details_path %>
<%= render 'admins/index_footer' %>

