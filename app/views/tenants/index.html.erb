<%= render 'admins/index' %>

<p id="notice"><%= notice %></p>

<div class="card">
<div class="card-body">
  <h1>Tenant Details</h1>
</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Cid</th>
      <th scope="col">Village</th>
      <th scope="col">Gewog</th>
      <th scope="col">Dzongkhag</th>
      <th scope="col">Flat no</th>
      <th scope="col">Total family members</th>
      <th scope="col">User</th>
      <th scope="col">House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.name %></td>
        <td><%= tenant.cid %></td>
        <td><%= tenant.village %></td>
        <td><%= tenant.gewog %></td>
        <td><%= tenant.dzongkhag %></td>
        <td><%= tenant.flat_no %></td>
        <td><%= tenant.total_family_members %></td>
        <td><%= tenant.user_id %></td>
        <td><%= tenant.house_id %></td>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Tenant', new_tenant_path, class:"btn btn-primary" %>
<%= render 'admins/index_footer' %>

