<%= render 'admins/index' %>

<p id="notice"><%= notice %></p>

<div class="card">
<div class="card-body">
  <h1>User Details</h1>
</div>
</div>

<table class="table table-striped">
  <thead>
  <tr>
  <th scope="col">Email</th>
  <th scope="col">Admin</th>
</tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td>        <%= user.email %><br/>        </td>
        <td>        <%= user.admin %><br/>        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Users',  new_user_registration_path, class:"btn btn-primary" %>
  <%= render 'admins/index_footer' %>

